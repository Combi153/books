package classpart;

public class Student {
	
	int studentID;
	String studentName;
	int grade;
	String address;
	
	public void showStudentInfor() {
		System.out.println(studentName + "," + address); 
	}
	
	public String getStudentName() { // 사용하는 입장에서 메서드 이름 짓는다. 
		return studentName;
	}
	
	public void setStudentName(String name) {
		studentName = name;
	}
}
